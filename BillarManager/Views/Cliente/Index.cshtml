@{
    @model List<BillarManager.Models.Cliente>
}
<div class="container container-fluid">
    <div class="container">
        <h1>Clientes</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalInsertar">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark-plus-fill" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5zm6.5-11a.5.5 0 0 0-1 0V6H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V7H10a.5.5 0 0 0 0-1H8.5V4.5z"/></svg>
            Agregar
        </button>
    </div>
    <div class="container tablas">
        <table class="table table-active table-hover">
            <thead>
                <tr>
                    <th>
                        Documento
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        NickName
                    </th>
                    <th>
                        fechaNacimiento
                    </th>
                    <th>
                        fechaRegistro
                    </th>
                    <th>
                        Editar
                    </th>
                     <th>
                        Eliminar
                    </th>
                </tr>
            </thead>
            <tbody class="table table-striped">
                @foreach(Cliente cliente in Model)
                {
                <tr>
                    <th>
                        @cliente.Documento
                    </th>
                    <th>
                        @cliente.Nombre
                    </th>
                    <th>
                        @cliente.NickName
                    </th>
                    <th>
                        @cliente.FechaNacimiento
                    </th>
                    <th>
                        @cliente.FechaRegistro
                    </th>
                    <th>
                        <a onclick="ada(@cliente.Documento)" data-bs-toggle="modal" data-bs-target="#ModalEditar">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/></svg>
                        </a>
                    </th>
                    <th>
                        <a  asp-action="Eliminar" asp-controller="Cliente" asp-route-id="@cliente.Documento">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">  <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/></svg>
                        </a>
                    </th>
                </tr>
                }
            </tbody>

        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="ModalInsertar" tabindex="-1" aria-labelledby="Insertar" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nuevo Cliente</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-action="NuevoCliente" asp-controller="Cliente">
                    <div class="container container-fluid">
                    
                        <div>
                            <label for="Documento" class="form-label"> Documento
                                <input type="text" name="Documento" class="form-control"  required/>
                            </label>
                        </div>
                        <div>
                            <label for="Nombre" class="form-label"> Nombre
                                <input type="text" name="Nombre" class="form-control" required/>
                            </label>
                        </div>
                        <div>
                            <label for="NickName" class="form-label"> NickName
                                <input type="text" name="NickName" class="form-control"/>
                            </label>
                        </div>
                        <div>
                            <label for="fechaNacimiento" class="form-label"> Fecha Nacimiento
                                <input type="date" name="FechaNacimiento" class="form-control" required/>
                            </label>
                        </div>
                    </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Agregar</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <!-- Editar -->
    <div class="modal fade" id="ModalEditar" tabindex="-1" aria-labelledby="Editar" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">EditarCliente Cliente</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-action="Editar" asp-controller="Cliente">
                        <div>
                            <label for="Documento" class="form-label"> Documento
                                <input type="text" id="DocumentoE" name="Documento" class="form-control" required/>
                            </label>
                        </div>
                        <div>
                            <label for="Nombre" class="form-label"> Nombre
                                <input type="text" id="NombreE" name="Nombre" class="form-control" required/>
                            </label>
                        </div>
                        <div>
                            <label for="NickName" class="form-label"> NickName
                                <input type="text" id="NickNameE" name="NickName" class="form-control"/>
                            </label>
                        </div>
                         <div>
                            <label for="FechaRegistro" class="form-label"> Fecha Registro
                                <input type="date" id="FechaRegistroE" name="FechaRegistro" class="form-control" required />
                            </label>
                        </div>
                        <div>
                            <label for="FechaNacimiento" class="form-label"> Fecha Nacimiento
                                <input type="date" id="FechaNacimientoE" name="FechaNacimiento" class="form-control" required/>
                            </label>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
function alerta(doc) 
{
    alert(doc)
}
    function ada(doc) {
        debugger
       // alert(doc)
        $.ajax({
            type: "GET",
            url: "Cliente/GetCliente",
            data: { id: doc },
            success: function (res) {
                console.log(res);
                //alert("Success");
                document.getElementById('DocumentoE').value=res.documento
                document.getElementById('NombreE').value=res.nombre
                document.getElementById('NickNameE').value=res.nickName
                document.getElementById('FechaNacimientoE').value=res.fechaNacimiento
                document.getElementById('FechaRegistroE').value=res.fechaRegistro
                //document.getElementById('DocumentoE').value=res.documento
            },
            error: function (res) {
                alert("Error")
            }
        })
    };

</script>